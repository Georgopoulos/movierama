<%= form_for(movie) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>

  <%= f.label :description %>
  <%= f.text_area :description, placeholder: "Here you can compose the movie description...", class: 'form-control' %>

  <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>