<li id="movie-<%= movie.id %>">
	<div class="col-md-12">
    <div>
      <span class="title"><%= movie.title.titleize %></span>
      <small>
        <%= render partial: 'movies/movie_actions', locals: { movie: movie } if current_user?(movie.user) %>
      </small>
    </div>
  	<div class="user-timestamp">
  		Posted by 
      <%= link_to current_user?(movie.user) ? "You" : movie.user.fullname, movie.user %> 
      <span><%= time_ago_in_words(movie.created_at) %> ago.</span>
  	</div>
  	<br>
  	<div class="description"><%= movie.description %></div>
  	<br>
    <div class="row">
      <%= render partial: 'votes/votes', locals: { movie: movie } %>
    </div>
  </div>
  <div class="clearfix"></div>
</li>